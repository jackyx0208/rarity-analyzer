<!doctype html>
<html lang="en" class="h-100">
  <head>
    <%- 
    include('./component/meta', {
      appTitle: appTitle, 
      appDescription: appDescription, 
      ogTitle: ogTitle, 
      ogDescription: ogDescription, 
      ogUrl: ogUrl, 
      ogImage: ogImage
    }); 
    -%>
  </head>
  <body class="d-flex text-white bg-dark" style="min-height: 100%;">
    
    <div class="container d-flex w-100 p-3 mx-auto flex-column" style="min-height: 100%; max-width: 72em;">
      <div class="c-h-container">
        <img src="/images/collection_head.png" class="c-h-container-img">
      </div>
      <main class="px-3" style="min-height: 100%;">
        <div>
          <h1 class="superbig upper text-center"><%= collection_name %></h1>
      </div>
       
        <h3 class="mb-4">FEATURED COLLECTIONS</h3>
        
        <div class="row punks">
          <% if (!_.isEmpty(collections)) { %>
            <% collections.forEach(function(collection) { %>
              <div class="col-lg-3 col-md-4 col-sm-6 col-6 mb-5" style="padding-left: 30px; padding-right: 30px;">
                <%- include('./component/collection', {collection: collection}); -%>
              </div>
            <% }); %>
          <% } else { %>
          <h1 class="text-center">
            There's no result.
          </h1>
          <% } %>
        </div>
        <%- 
        include('./component/paginate', {
          totalPage: totalPage, 
          page: page, 
          path: '/?search='+search+'&order_by='+orderBy
        }); 
        -%>
      </main>
      <%- include('./component/footer'); -%>
    </div>
  </body>
</html>