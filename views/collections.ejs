<!doctype html>
<html lang="en" class="h-100">
  <head>
    <%- 
    include('./component/meta', {
      appTitle: appTitle, 
      appDescription: appDescription, 
      ogTitle: ogTitle, 
      ogDescription: ogDescription, 
      ogUrl: ogUrl, 
      ogImage: ogImage
    }); 
    -%>
  </head>
  <body class="d-flex text-white bg-dark" style="min-height: 100%;">
    <nav id="sidebar">
      <div class="custom-menu">
      <button type="button" id="sidebarCollapse" class="btn btn-primary">
      <i class="fa fa-bars"></i>
      <span class="sr-only">Toggle Menu</span>
      </button>
      </div>
      <div class="p-4 pt-5">
      <h1><a href="index.html" class="logo">Splash</a></h1>
      <ul class="list-unstyled components mb-5">
      <li class="active">
      <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
      <ul class="collapse list-unstyled" id="homeSubmenu">
      <li>
      <a href="#">Home 1</a>
      </li>
      <li>
      <a href="#">Home 2</a>
      </li>
      <li>
      <a href="#">Home 3</a>
      </li>
      </ul>
      </li>
      <li>
      <a href="#">About</a>
      </li>
      <li>
      <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Pages</a>
      <ul class="collapse list-unstyled" id="pageSubmenu">
      <li>
      <a href="#">Page 1</a>
      </li>
      <li>
      <a href="#">Page 2</a>
      </li>
      <li>
      <a href="#">Page 3</a>
      </li>
      </ul>
      </li>
      <li>
      <a href="#">Portfolio</a>
      </li>
      <li>
      <a href="#">Contact</a>
      </li>
      </ul>
      <div class="mb-5">
      <h3 class="h6">Subscribe for newsletter</h3>
      <form action="#" class="colorlib-subscribe-form">
      <div class="form-group d-flex">
      <div class="icon"><span class="icon-paper-plane"></span></div>
      <input type="text" class="form-control" placeholder="Enter Email Address">
      </div>
      </form>
      </div>
      <div class="footer">
      <p>
      Copyright Â©<script>document.write(new Date().getFullYear());</script>2022 All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib.com</a>
      </p>
      </div>
      </div>
    </nav>
    <div class="container d-flex w-100 p-3 mx-auto flex-column" style="min-height: 100%; max-width: 72em;">
      <div class="c-h-container">
        <img src="/images/collection_head.png" class="c-h-container-img">
      </div>
      <main class="px-3" style="min-height: 100%;">
        <div>
          <h1 class="superbig upper text-center"><%= collection_name %></h1>
      </div>
       
        <h3 class="mb-4">FEATURED COLLECTIONS</h3>
        
        <div class="row punks">
          <% if (!_.isEmpty(collections)) { %>
            <% collections.forEach(function(collection) { %>
              <div class="col-lg-3 col-md-4 col-sm-6 col-6 mb-5" style="padding-left: 30px; padding-right: 30px;">
                <%- include('./component/collection', {collection: collection}); -%>
              </div>
            <% }); %>
          <% } else { %>
          <h1 class="text-center">
            There's no result.
          </h1>
          <% } %>
        </div>
        <%- 
        include('./component/paginate', {
          totalPage: totalPage, 
          page: page, 
          path: '/?search='+search+'&order_by='+orderBy
        }); 
        -%>
      </main>
      <%- include('./component/footer'); -%>
    </div>
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
  </body>
</html>